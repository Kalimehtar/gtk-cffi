(in-package :gtk-cffi)

(defmethod show ((seq sequence) &key &allow-other-keys)
  (show
   (gtk-model 
     'window
     ('scrolled-window
      ('tree-view :model 
                  (make-instance 
                   'lisp-model
                   :implementation 
                   (make-instance 'lisp-model-array 
                                  :array (map 'vector 
                                              (compose #'list 
                                                       #'princ-to-string) 
                                              seq) 
                                  :columns '(:string)))
                  :columns '("Array"))))))

