(in-package :gtk-cffi)

(defmethod show ((array array) &key &allow-other-keys)
  (show
   (gtk-model 
     'window
     ('scrolled-window
      ('tree-view :model 
                  (make-instance 'lisp-model
                                 :implementation 
                                 (make-instance 'lisp-model-array 
                                                :array array 
                                                :columns '(:string)))
                  :columns '("Array"))))))
                 